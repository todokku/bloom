# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100


# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{js,jsx,ts,tsx,vue,json,html}]
indent_style = space
indent_size = 2

# 4 space indentation
[{*.rs,*.toml,*.sane,*.json, *.sql, *.css, *.scss, *.sass}]
indent_style = space
indent_size = 4

[{go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

[*.{dart}]
max_line_length = 80
